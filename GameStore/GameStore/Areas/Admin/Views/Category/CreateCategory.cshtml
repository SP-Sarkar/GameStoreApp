@model GameStore.Areas.Admin.Models.ViewModels.CategoryChangeViewModel
@{
    ViewData["Title"] = "CreateCategory";
}

<div class="mt-lg-5">
    <div class="row">
        <div class="col-6">
            <h3>Create New Game Developer</h3>
        </div>
        <div class="col-6">
            <a asp-action="Index" asp-route-active="active" class="btn btn-dark float-right">All Active Game Developers</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-6">
            <form asp-action="CreateCategoryPost" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Company Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                    <span class="text-muted text-danger" asp-validation-for="Description"></span>
                </div>
                <input type="submit" value="Create Catgory" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


