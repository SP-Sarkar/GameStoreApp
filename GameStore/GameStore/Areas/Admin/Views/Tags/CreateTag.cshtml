@model GameStore.Data.Entities.Tag
@{
    ViewData["Title"] = "Create Tag";
}


<div class="mt-lg-5">
    <div class="row">
        <div class="col-6">
            <h3>Create New Tag</h3>
        </div>
        @* <div class="col-6"> *@
        @*     <a asp-action="Index" asp-route-active="active" class="btn btn-dark float-right">All Active Tags</a> *@
        @* </div> *@
    </div>
    <hr/>
    <div class="row">
        <div class="col-6">
            <form asp-action="CreateTagPost" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="Name"></span>
                </div>
                <input type="submit" value="Create Tag" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


