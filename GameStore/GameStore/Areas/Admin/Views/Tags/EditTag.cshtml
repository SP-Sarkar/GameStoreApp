@model GameStore.Data.Entities.Tag
@{
    ViewData["Title"] = "Edit " + Model.Name;
}


<div class="mt-lg-5">
    <div class="row">
        <div class="col-6">
            <h3>Edit @Model.Name</h3>
        </div>
        <div class="col-6">
            <div class="btn-group-sm float-right" role="group" aria-label="">
                <a asp-action="Index" asp-route-active="active" class="btn btn-dark ">All Active Tags</a>
                <a asp-action="CreateTag" class="btn btn-dark">Create Tag</a>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-6">
            <form asp-action="EditTagPost" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="GuidValue"/>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control"/>
                    <span class="text-muted text-danger" asp-validation-for="Name"></span>
                </div>
                <input type="submit" value="Update Tag" class="btn btn-primary"/>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}