@model GameStore.Areas.Admin.Models.ViewModels.GameDeveloperChangeViewModel
@{
    ViewData["Title"] = "Create Game Developer";
}


<div class="mt-lg-5">
    <div class="row">
        <div class="col-6">
            <h3>Create New Game Developer</h3>
        </div>
        <div class="col-6">
            <a asp-action="Index" asp-route-active="active" class="btn btn-dark float-right">All Active Game Developers</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-6">
            <form asp-action="CreateGameDeveloperPost" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebUrl"></label>
                    <input type="text" asp-for="WebUrl" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="WebUrl"></span>
                </div>
                <div class="form-group">
                    <label as-for="Logo">Company Logo</label>
                    <input type="file" class="form-control-file" asp-for="Logo">
                    <span class="text-muted text-danger" asp-validation-for="Logo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Company Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                </div>
                <input type="submit" value="Create Company" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


