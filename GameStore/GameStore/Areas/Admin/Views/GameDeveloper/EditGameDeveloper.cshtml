@model GameStore.Areas.Admin.Models.ViewModels.GameDeveloperChangeViewModel
@{
    ViewData["Title"] = "Edit " + @Model.Name;
}



<div class="mt-lg-5">
    <div class="row">
        <div class="col-6">
            <h3>Edit @Model.Name</h3>
        </div>
        <div class="col-6">
            <div class="btn-group-sm float-right" role="group" aria-label="">
                <a asp-action="Index" asp-route-active="active" class="btn btn-dark ">All Active Game Developers</a>
                <a asp-action="CreateGameDevelopers" class="btn btn-dark">Create Game Company</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-6">
            <form asp-action="EditGameDeveloperPost" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="GuidValue" />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebUrl"></label>
                    <input type="text" asp-for="WebUrl" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="WebUrl"></span>
                </div>
                <img src="~/@Model.OldLogo" alt="@Model.Name" class="img-thumbnail" width="300px"/>
                <div class="form-group">
                    <label as-for="Logo">Company Logo</label>
                    <input type="file" class="form-control-file" asp-for="Logo">
                    <span class="text-muted text-danger" asp-validation-for="Logo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Company Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                </div>
                <input type="submit" value="Update Company" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


