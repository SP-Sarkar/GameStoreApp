@model GameStore.Areas.Admin.Models.ViewModels.GameChangeViewModel
@{
    ViewData["Title"] = Model.Title;
}


<div class="mt-lg-5">
    <div class="row">
        <div class="col-6">
            <h3>@Model.Title</h3>
        </div>
        <div class="col-6">
            <a asp-action="Index" asp-route-active="active" class="btn btn-dark float-right">All Active Games</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-6">
            <form asp-action="CreateGamePost" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebUrl"></label>
                    <input type="text" asp-for="WebUrl" class="form-control" />
                    <span class="text-muted text-danger" asp-validation-for="WebUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TagId"></label>
                    <select asp-for="TagId" asp-items="@Model.TagList" class="form-control"></select>
                    <span class="text-muted text-danger" asp-validation-for="TagId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameDeveloperId"></label>
                    <select asp-for="GameDeveloperId" asp-items="@Model.GameDeveloperList" class="form-control"></select>
                    <span class="text-muted text-danger" asp-validation-for="GameDeveloperId"></span>
                </div>
                @* Multi Dropdown List *@
                <div class="form-group">
                    <label asp-for="GameCategoryId"></label>
                    <select multiple="multiple" size="5" asp-for="GameCategoryId" asp-items="@Model.GameCategoryList"  class="form-control"></select>
                    <span class="text-muted">Select Maximum 5 category</span>
                    <span class="text-muted text-danger" asp-validation-for="GameDeveloperId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" >Company Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                </div>
                <input type="submit" value="Create Game" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


